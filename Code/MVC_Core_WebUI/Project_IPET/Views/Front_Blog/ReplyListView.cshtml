 @model List<Project_IPET.ViewModels.CPostViewModel>
<!-- Blog Details Post area Start -->
                         <div class="blog-details-comment-area m-b-n30" >
                                  <h2 class="blog-desc-title m-b-30 m-t-40">留言</h2>
@foreach (var item in Model)
{
                                <div class="blog-details-comment-wrapper m-b-30">
                                    <div class="thumb">
                                        <img class="fit-image" src="~/Front/images/blog/small-size/@Html.DisplayFor(modelItem => item.MemberImage)">
                                    </div>
                                    <div class="content">
                                        <h4 class="title">@Html.DisplayFor(modelItem => item.MemberName)</h4>
                                        <ul class="meta">
                                            <li>@Html.DisplayFor(modelItem => item.PostDate)</li>
                                        </ul>
                                        <p>@Html.DisplayFor(modelItem => item.PostContent)</p>
                                    </div>
                                </div>
}
                         </div>    
                        
<!-- Blog Details Post area End -->
@section Scripts{
<script>
    $(document).ready(function () {
        $("#inputQty").click(AddToCart);
    });
    function AddToCart(productId, qty) {
        $.ajax({
            method: "POST",
            url: "/Front_Cart/AddToCart",
            data: {
                id: productId,
                qty: $("#inputQty").val()
            },
            success: function (result) {
                window.location.href = "/Front_Cart/Index";
            }
        });
    }
</script>
}


@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IPET 寵物愛心公益平台</title>

    <!--Favicons-->
    <link rel="shortcut icon" href="~/Front/images/favicon2.ico">

    <!--Vendor CSS (Icon Font)-->
    <link rel="stylesheet" href="~/Front/css/vendor/fontawesome.min.css" />
    <script src="https://kit.fontawesome.com/cfd6e1f3d1.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/Front/css/vendor/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Front/css/vendor/vendor.min.css" />
    <link rel="stylesheet" href="~/Front/css/vendor/simple-line-icons.min.css" />
    <link rel="stylesheet" href="~/Front/css/vendor/themify-icons-min.css" />

    <!--Plugins CSS (All Plugins Files)-->
    <link rel="stylesheet" href="~/Front/css/plugins/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/Front/css/plugins/animate.min.css" />
    <link rel="stylesheet" href="~/Front/css/plugins/lightgallery.min.css" />
    <link rel="stylesheet" href="~/Front/css/plugins/aos.min.css" />
    <link rel="stylesheet" href="~/Front/css/plugins/nice-select.min.css" />
    <link rel="stylesheet" href="~/Front/css/plugins/plugins.min.css" />

    <link rel="stylesheet" href="~/Front/css/vendor/vendor.min.css">
    <link rel="stylesheet" href="~/Front/css/plugins/plugins.min.css">

    <!--Main Style CSS-->
    <link rel="stylesheet" href="~/Front/css/style.css" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Header Section Start -->
    <div class="header">

        <!-- Header Top Start -->
        <div class="header-top bg-name-primary">
            <div class="container">
                <div class="row align-items-center">

                    <!-- Header Top Message Start-->
                    <div class="col-12 col-lg-6">
                        <div class="header-top-msg-wrapper">
                            <p class="header-top-message">歡迎光臨 !</p>
                        </div>
                    </div>
                    <!-- Header Top Message End -->

                </div>
            </div>
        </div>
        <!-- Header Top End -->
        <!-- Header Bottom Start -->
        <div class="header-bottom">
            <div class="header-sticky">
                <div class="container">
                    <div class="row align-items-center position-relative">

                        <!-- Header Logo Start -->
                        <div class="col-lg-3 col-md-4 col-6">
                            <div class="header-logo">
                                <a asp-controller="Front_Home" asp-action="Index"><img src="~/Front/images/logo/logo.png" alt="Site Logo" /></a>
                            </div>
                        </div>
                        <!-- Header Logo End -->
                        <!-- Header Menu Start -->
                        <div class="col-lg-6 d-none d-lg-block">
                            <div class="main-menu">
                                <ul>
                                    <li>
                                        <a asp-controller="Front_Home" asp-action="Index">首頁</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Front_Blog" asp-action="Index">部落格</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Front_Project" asp-action="Index">募集專案</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Front_Product" asp-action="Index">寵物商品</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Front_PetAdopt" asp-action="Index">認養資訊</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Front_Contact" asp-action="Index">聯絡我們</a>
                                    </li>
                                    @*<li>
                                            <a asp-controller="Chat" asp-action="Chat">聊天</a>
                                        </li>*@
                                </ul>
                            </div>
                        </div>
                        <!-- Header Menu End -->
                        <!-- Header Action Start -->
                        <div class="col-lg-3 col-md-8 col-6">
                            <div class="header-actions">

                                <!-- Header Action Search Button Start -->
                                <!--<div class="header-action-btn header-action-btn-search d-none d-md-flex">
                                    <div class="action-execute">
                                        <a class="action-search-open" href="javascript:void(0)"><i class="icon-magnifier icons"></i></a>
                                        <a class="action-search-close" href="javascript:void(0)"><i class="ti-close"></i></a>
                                    </div>-->
                                    <!-- Search Form and Button Start -->
                                    <!--<form class="header-search-form" action="#">
                                        <input type="text" class="header-search-input" placeholder="搜尋">
                                        <button class="header-search-button"><i class="icon-magnifier icons"></i></button>
                                    </form>-->
                                    <!-- Search Form and Button End -->
                                <!--</div>-->
                                <!-- Header Action Search Button End -->
                                <!-- Header My Account Button Start -->
                                <a asp-controller="Front_Myaccount" asp-action="Index" class="header-action-btn header-action-btn-wishlist">
                                    <i class="icon-user icons"></i>
                                </a>
                                <!-- Header My Account Button End -->
                                <div class="header-action-btn header-action-btn-cart d-none d-sm-flex" id="CartMenu">
                                    @await Html.PartialAsync("_CartPartial")
                                </div>
                                @if (Context.Session.GetString("SK_LOGINED_USER") == null) { }
                                else
                                {
                                    <div id="loginmember" class="d-sm-flex align-items-center d-none">
                                        您好，<strong style="color:rgb(246,171,79)">@Context.Session.GetString("SK_LOGINED_NAME")</strong>
                                    </div>
                                }

                            </div>
                        </div>
                        <!-- Header Action End -->

                    </div>
                </div>
            </div>
        </div>
        <!-- Header Bottom End -->

    </div>
    <!-- Header Section End -->
    <div class="body-content">
        @RenderBody()
        <hr />
        <!-- Footer Section Start -->
        <footer class="section footer-section">
            <!-- Footer Top Start -->
            <div class="footer-top bg-name-bright section-padding">
                <div class="container">
                    <div class="row m-b-n40">
                        <div style="margin:0 auto;" class="col-12 col-sm-6 col-lg-3 m-b-40" data-aos="fade-up" data-aos-duration="1000">
                            <div class="single-footer-widget">
                                <h1 class="widget-title">關於我們</h1>
                                <p class="desc-content">
                                    IPET 寵物愛心公益平台 是一個線上商城及資訊平台, 除提供寵物產品購買及捐贈 , 也設有認養資訊頁面。
                                </p>
                                <p class="desc-content">
                                    我們也擁有部落格供會員分享寵物之生活事物, 藉由以上契機希望可以吸引各地善良人士,
                                    發揮愛心以達到本平台公益之目的。
                                </p>
                            </div>
                        </div>
                        <div style="margin:0 auto;" class="col-12 col-sm-6 col-lg-3 m-b-40" data-aos="fade-up" data-aos-duration="1500">
                            <div class="single-footer-widget">
                                <h2 class="widget-title">友情連結</h2>
                                <ul class="widget-list">
                                    <li>
                                        <a href="http://www.hsapf.org.tw/">財團法人流浪動物之家基金會</a>
                                    </li>
                                    <li>
                                        <a href="https://asms.coa.gov.tw/Amlapp/App/Default.aspx">全國推廣動物認養平台</a>
                                    </li>
                                    <li>
                                        <a href="http://www.meetpets.org.tw/pets/dog">台灣認養地圖</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div style="margin:0 auto;" class="col-12 col-sm-6 col-lg-3 m-b-40" data-aos="fade-up" data-aos-duration="2000">
                            <div class="single-footer-widget">
                                <h2 class="widget-title">優惠電子報</h2>
                                <div class="widget-body">
                                    <p class="desc-content m-b-20">訂閱 IPET 新消息取得優惠 !</p>
                                    <!-- Newsletter Form Start -->
                                    <div class="newsletter-form-wrap p-t-5">
                                        <form id="mc-form" class="mc-form">
                                            <input type="email" id="mc-email" class="form-control email-box" placeholder="mail@example.com" name="EMAIL">
                                            <button id="mc-submit" class="newsletter-btn" type="submit">Send</button>
                                        </form>
                                        <!-- mailchimp-alerts Start -->
                                        <div class="mailchimp-alerts text-centre">
                                            <div class="mailchimp-submitting"></div><!-- mailchimp-submitting end -->
                                            <div class="mailchimp-success text-success"></div><!-- mailchimp-success end -->
                                            <div class="mailchimp-error text-danger"></div><!-- mailchimp-error end -->
                                        </div>
                                        <!-- mailchimp-alerts end -->
                                    </div>
                                    <!-- Newsletter Form End -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer Top End -->
            <!-- Footer Bottom Start -->
            <div class="footer-bottom bg-name-light p-t-20 p-b-20">
                <div class="container">
                    <div class="row align-items-center m-b-n20">
                        <div class="col-md-6 text-center text-md-start order-2 order-md-1 m-b-20">
                            <div class="copyright-content">
                                <p class="mb-0">
                                    © 2022 All rights reserved
                                    <strong> IPET 寵物愛心公益平台 </strong> By
                                    <a href="https://www.ispan.com.tw/">iSpan - MSIT133 </a>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6 text-center text-md-end order-1 order-md-2 m-b-20">
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer Bottom End -->
        </footer>
        <!-- Footer Section End -->
    </div>

    <!-- Global Vendor, plugins JS -->
    <!-- Vendor JS -->

    <script src="~/Front/js/vendor/popper.min.js"></script>
    <script src="~/Front/js/vendor/bootstrap.min.js"></script>
    <script src="~/Front/js/vendor/jquery-3.6.0.min.js"></script>
    <script src="~/Front/js/vendor/jquery-migrate-3.3.2.min.js"></script>
    <script src="~/Front/js/vendor/modernizr-3.11.2.min.js"></script>

    <!-- Plugins JS -->

    <script src="~/Front/js/plugins/aos.min.js"></script>
    <script src="~/Front/js/plugins/jquery.ajaxchimp.min.js"></script>
    <script src="~/Front/js/plugins/jquery-ui.min.js"></script>
    <script src="~/Front/js/plugins/nice-select.min.js"></script>
    <script src="~/Front/js/plugins/swiper-bundle.min.js"></script>
    <script src="~/Front/js/plugins/countdown.min.js"></script>
    <script src="~/Front/js/plugins/lightgallery-all.min.js"></script>
    <script src="~/Front/js/plugins/jquery.collapse.js"></script>


    <script src="~/Front/js/vendor.min.js"></script>
    <script src="~/Front/js/plugins.min.js"></script>

    <!--Main JS-->
    <script src="~/Front/js/main.js"></script>

    <!-- Blog JS -->
    <script src="~/Front/js/Blog/PostTools.js"></script>

    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        $(document).ready(function () {
                $.ajax({
                    method: "POST",
                    url: "/Front_Cart/GetCart",
                    data: {
                    },
                    success: function (result) {
                        $('#CartMenu').html(result)
                        }
                });
            });

        window.addEventListener("pageshow", function (event) {
            var historyTraversal = event.persisted ||
                (typeof window.performance != "undefined" &&
                    window.performance.navigation.type === 2);
            if (historyTraversal) {
                window.location.reload();
            }
        });

        function RemoveItem(productId, productname, qty){
            $.ajax({
                method:'POST',
                url:'@Url.Content("/Front_Cart/RemoveItem")',
                data: {
                    id: productId
                },
                success: function (result) {
                    $('#CartMenu').html(result),
                        Swal.fire({
                            icon: 'info',
                            title: '商品已從購物車移除',
                            text: productname + ' 數量 : ' + qty,
                        })
                }
            })
        }

        function RemoveAll(){
            $.ajax({
                method:'POST',
                url:'@Url.Content("/Front_Cart/RemoveAll")',
                data: {
                },
                success: function (result) {
                    $('#CartMenu').html(result),
                        Swal.fire({
                            icon: 'info',
                            title: '全部商品已從購物車移除',
                        })
                }
            })
        }

    </script>
</body>
</html>